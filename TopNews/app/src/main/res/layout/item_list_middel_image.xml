<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_click"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_middle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:textColor="@color/colorBlack"
        android:textSize="18sp" />

    <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_middle1"
            android:layout_width="100dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_height="70dp" />

        <ImageView
            android:id="@+id/iv_middle2"
            android:layout_width="100dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:id="@+id/iv_middle3"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_middle_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作者" />

        <TextView
            android:id="@+id/tv_middle_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2018-8-23" />
    </LinearLayout>
</LinearLayout>